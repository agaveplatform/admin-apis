server {

    listen 80;
    server_name abaco.org;
    charset utf-8;

    location /docs {
        root /;
    }

    location ~* ^/admin/jwt(.*) {
        proxy_pass http://172.17.0.1:5000/admin/jwt$1$is_args$args;
    }

    location ~/admin/service_accounts(.*) {
        proxy_pass http://172.17.0.1:5001/admin/service_accounts$1$is_args$args;
    }

    location ~/admin/roles(.*) {
        proxy_pass http://172.17.0.1:5001/admin/roles$1$is_args$args;
    }

}